        { spanish: 'A pesar de los inconvenientes, la propuesta es viable.' },
        { spanish: 'Por un lado es rápido. Por otro lado, pierde calidad. No obstante, la eficiencia compensa.' },
        { spanish: 'Aunque algunos lo critican, los datos demuestran lo contrario.' }],
      rules: [
        'CONCESIÓN SIMPLE: Es verdad que... / Es cierto que... / Admito que...',
        'CONCESIÓN + CONTRASTE: Aunque... / A pesar de que... / Si bien...',
        'ADVERSATIVOS FUERTES: Sin embargo / No obstante / Empero / No por eso',
        'ADVERSATIVOS CONCESIVOS: A pesar de... / A pesar de ello / Con todo',
        'REFUTACIÓN DIRECTA: Todo lo contrario / Por el contrario / Muy al contrario',
        'PIVOTE: pero / pero sin embargo / no por eso / aun así'],
      notes: [
        'Cuidado con "pero" repetitivo - varía con sin embargo, no obstante',
        'Aunque + indicativo (hecho real) o subjuntivo (hipotético)',
        'A pesar de / A pesar de que + sustantivo / oración',
        'No obstante es muy formal, ideal para debates académicos'],
    },
    vocabularyContent: {
      title: 'Vocabulario de la contraargumentación',
      items: [
        { term: 'Conceder', definition: 'Reconocer un punto válido del oponente', example: 'Concedo que su argumento tiene lógica', category: 'estrategia' },
        { term: 'Refutar', definition: 'Contradecir con argumentos', example: 'Refuto su afirmación con datos', category: 'estrategia' },
        { term: 'Rebatir', definition: 'Responder y contradecir argumentos', example: 'Rebatimos sus tesis una por una', category: 'estrategia' },
        { term: 'Desvirtuar', definition: 'Debilitar o quitar valor a un argumento', example: 'Ese dato desvirtúa su conclusión', category: 'estrategia' },
        { term: 'Desmentir', definition: 'Demostrar que algo es falso', example: 'Los hechos desmienten su claim', category: 'estrategia' },
        { term: 'Sostener', definition: 'Mantener o defender un argumento', example: 'Sostengo que esta medida es necesaria', category: 'estrategia' },
        { term: 'Corroborar', definition: 'Confirmar o respaldar con pruebas', example: 'Los datos corroboran mi tesis', category: 'estrategia' }],
      expressions: [
        { expression: 'Todo lo contrario', meaning: 'Just the opposite', usage: 'Refutación fuerte' },
        { expression: 'Nada más lejos de la realidad', meaning: 'Nothing further from reality', usage: 'Refutación muy enfática' },
        { expression: 'No estoy convencido', meaning: 'No me convence', usage: 'Refutación suave' },
        { expression: 'Sin ánimo de contradecir', meaning: 'Refutación cortés', usage: 'Formal' }],
