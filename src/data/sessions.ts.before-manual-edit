        { term: 'Al + infinitivo', definition: 'Al realizar una acción', example: 'Al llegar, me di cuenta', category: 'conector' },
        { term: 'Mientras', definition: 'Simultaneidad', example: 'Mientras estudias, trabajo', category: 'conector' },
        { term: 'Hacía + tiempo', definition: 'Hacía X tiempo que (pasado)', example: 'Hacía 3 años que vivía aquí', category: 'expresión' },
        { term: 'Desde hace / Hacia', definition: 'Duration from a point', example: 'Vivo aquí desde hace 3 años', category: 'expresión' },
        { term: 'Transcurrir / Pasar', definition: 'Pass (time)', example: 'Pasó el tiempo', category: 'verbo' }],
