  // SESIÓN 10: Narrar en el pasado
  // ============================================
  {
    sessionNumber: 10,
    date: new Date('2026-03-05'),
    title: 'Narrar en el pasado',
    subtitle: 'Relato de anécdotas e informaciones',
    blockNumber: 2,
    blockTitle: 'La Conferencia y la Entrevista',
    isExamDay: false,
    objectives: [
      { id: 'obj-10-1', text: 'Diferenciar pretérito imperfecto, pretérito perfecto simple y compuesto' },
      { id: 'obj-10-2', text: 'Narrar anécdotas personales con coherencia' },
      { id: 'obj-10-3', text: 'Usar conectores temporales apropiados' },
      { id: 'obj-10-4', text: 'Relatar información con precisión temporal' },
      { id: 'obj-10-5', text: 'Evitar errores comunes con los pasados', isModeB: true }],
    timing: [
      { id: 't10-1', duration: '15 min', activity: 'Repaso de pasados', description: 'Pretéritos: usos y diferencias' },
      { id: 't10-2', duration: '20 min', activity: 'Conectores temporales', description: 'Antes, después, mientras, cuando' },
      { id: 't10-3', duration: '25 min', activity: 'Práctica de narración', description: 'Relatar anécdotas' },
      { id: 't10-4', duration: '20 min', activity: 'Narración compleja', description: 'Historias con múltiples personajes' },
      { id: 't10-5', duration: '10 min', activity: 'Feedback', description: 'Errores comunes y corrección' }],
    dynamics: [
      {
        id: 'd10-1',
        step: 1,
        title: 'La línea del tiempo',
        instructions: [
          'Dibuja una línea del tiempo de tu vida',
          'Marca al menos 5 eventos importantes',
          'Para cada uno, decide qué pasado usar:',
          '· Pret. Imperfecto: descripciones, hábitos ("Era muy feliz cuando...")',
          '· Pret. Perfecto Simple: acciones completadas ("Aquel día me mudé")',
          '· Pret. Perfecto Compuesto: pasado reciente ("Me he mudado hace poco")',
          'Comparte con tu compañero tu línea del tiempo'],
        groupType: 'pairs',
        materials: ['Papel', 'Rotuladores'],
      },
      {
        id: 'd10-2',
        step: 2,
        title: 'El juego de los cambios',
        instructions: [
          'Cuenta una historia usando solo PRETÉRITO IMPERFECTO',
          'Luego, cuéntala usando solo PRETÉRITO PERFECTO SIMPLE',
          '¿Qué cambia en el efecto?',
          'Ejemplo: "Aquel día, yo ESTABA en el parque y LEÍA un libro. De repente, LLOVÍA mucho..."',
          'vs. "Aquel día, yo FUI al parque y LEÍ un libro. De repente, EMPEZÓ a llover..."'],
